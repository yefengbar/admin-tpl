
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title" style="height: 62px;">
          <h5 style="padding-top:8px">游戏管理 <small>管理区服和状态，查找游戏</small></h5>
          <div class="col-lg-3 ibox-tools">
            <select class="input-sm form-control input-s-sm inline" style="padding:0 12px">
              <option value="1" selected="selected">联运游戏</option>
              <option value="2">儿童游戏</option>
              <option value="3">社区游戏</option>
              <option value="4">合作游戏</option>
            </select>
          </div>
        </div>
        <div class="ibox-content">

          <table class="table table-striped table-hover dataTables">
            <thead>
            <tr>
              <td width="50" align="center"><b>ID</b></td>
              <td width="200" align="center"><b>游戏名称</b></td>
              <td width="100" align="center"><b>服务器列表</b></td>
              <td width="100" align="center"><b>批量区服管理</b></td>
              <td width=100" align="center"><b>游戏类型</b></td>
              <td width="100" align="center"><b>新服</b></td>
              <td width="100" align="center"><b>游戏状态</b></td>
              <td width="" align="center"><b>充值显示</b></td>
              <td width="" align="center"><b>操作</b></td>
            </tr>
            </thead>
            <tbody>
            {{#each model as |glist|}}
              <tr>
                <td align="center">{{glist.gid}}</td>
                <td align="center">{{#link-to "game-edit" glist title=glist.gname}}{{glist.gname}}{{/link-to}}</td>
                <td align="center">{{#link-to "news"}}服务器列表{{/link-to}}</td>
                <td align="center">{{#link-to "news" }}区服管理{{/link-to}}</td>
                <td align="center">{{glist.gametype}}</td>
                <td align="center">{{glist.gamestate}}</td>
                <td align="center"><span class="text-{{if-t glist.gamestatus 'info' 'danger'}}">{{if-t glist.gamestatus
                                                                                                       '正常运行'
                                                                                                       '暂停运行'}}</span>
                </td>
                <td align="center"><span class="text-{{if-t glist.isshow 'info' 'danger'}}">{{if-t glist.isshow '是'
                                                                                                   '否'}}</span></td>
                <td align="center">{{#link-to "news" title="编辑游戏"}}修改{{/link-to}}</td>
              </tr>
            {{else}}
              <tr>
                <td colspan="9">
                  <p>抱歉！！未找到相关记录！</p>
                </td>
              </tr>
            {{/each}}
            </tbody>
            <tfoot>
            <tr>
              <td width="50" align="center"><b>ID</b></td>
              <td width="200" align="center"><b>游戏名称</b></td>
              <td width="100" align="center"><b>服务器列表</b></td>
              <td width="100" align="center"><b>批量区服管理</b></td>
              <td width=100" align="center"><b>游戏类型</b></td>
              <td width="100" align="center"><b>新服</b></td>
              <td width="100" align="center"><b>游戏状态</b></td>
              <td width="" align="center"><b>充值显示</b></td>
              <td width="" align="center"><b>操作</b></td>
            </tr>
            </tfoot>
          </table>

        </div>
      </div>
    </div>
  </div>

</div>