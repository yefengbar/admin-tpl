                <i class="fa {{list.icon}}"></i>
                <span class="nav-label">{{list.name}}</span>
                <span class="fa arrow"></span>
              </a>
            {{/if}}
            {{#if list.list}}
              <ul class="nav nav-second-level">
                {{#each list.list as |li|}}
                  <li>
                    {{#link-to li.url}}{{li.name}}{{/link-to}}
                  </li>
                {{/each}}
              </ul>
            {{/if}}
          </li>
        {{/each}}
